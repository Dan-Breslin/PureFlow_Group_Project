<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Database">

    <Button
        android:id="@+id/btn_InputRes"
        style="@style/FirebaseUI.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="Input Data"
        app:layout_constraintBottom_toTopOf="@+id/tv_Information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eText_Levels" />

    <TextView
        android:id="@+id/tv_Information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="216dp"
        android:text="Default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_InputRes"
        app:layout_constraintTop_toBottomOf="@+id/btn_InputRes" />

    <EditText
        android:id="@+id/eText_ResName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:hint="Reservior Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/eText_Lat"
        app:layout_constraintEnd_toStartOf="@+id/tv_ResIDText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ResID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="109dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/eText_Long"
        app:layout_constraintEnd_toEndOf="@+id/eText_Lat"
        app:layout_constraintStart_toStartOf="@+id/tv_ResIDText"
        app:layout_constraintTop_toBottomOf="@+id/tv_ResIDText" />

    <TextView
        android:id="@+id/tv_ResIDText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="13dp"
        android:text="Reservior ID"
        app:layout_constraintBottom_toTopOf="@+id/tv_ResID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eText_ResName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Lat"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="9dp"
        android:text="Latitude :"
        android:textAlignment="textEnd"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/eText_Lat"
        app:layout_constraintEnd_toStartOf="@+id/eText_Lat"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/eText_Lat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="41dp"
        android:ems="10"
        android:hint="Latitude data"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/tv_Long"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_Lat"
        app:layout_constraintTop_toBottomOf="@+id/eText_ResName" />

    <TextView
        android:id="@+id/tv_Long"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="22dp"
        android:text="Longtitude :"
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/eText_Levels"
        app:layout_constraintEnd_toStartOf="@+id/eText_Long"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eText_Lat" />

    <EditText
        android:id="@+id/eText_Long"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="431dp"
        android:ems="10"
        android:hint="Longtitude data"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_Long"
        app:layout_constraintTop_toBottomOf="@+id/tv_ResID" />

    <EditText
        android:id="@+id/eText_Levels"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="75dp"
        android:ems="10"
        android:hint="Res Level"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btn_InputRes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_Levels"
        app:layout_constraintTop_toBottomOf="@+id/tv_Long" />

    <TextView
        android:id="@+id/tv_Levels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="17dp"
        android:text="Reservoir Level"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/eText_Levels"
        app:layout_constraintEnd_toStartOf="@+id/eText_Levels"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
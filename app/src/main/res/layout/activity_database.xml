<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Database">


    <Button
        android:id="@+id/btn_InputRes"
        style="@style/FirebaseUI.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="71dp"
        android:text="Input Data"
        app:layout_constraintBottom_toTopOf="@+id/test2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eText_Long" />

    <EditText
        android:id="@+id/eText_Long"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Longtitude data"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@+id/btn_InputRes"
        app:layout_constraintEnd_toStartOf="@+id/eText_Levels"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eText_ResName" />

    <EditText
        android:id="@+id/eText_Lat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:hint="Latitude data"
        android:inputType="number"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/eText_Levels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eText_ResName"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eText_ResName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Reservior Name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/eText_Long"
        app:layout_constraintEnd_toStartOf="@+id/eText_Lat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eText_Levels"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="221dp"
        android:ems="10"
        android:hint="Res Level"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/listView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eText_Long"
        app:layout_constraintTop_toBottomOf="@+id/eText_Lat" />

    <Button
        android:id="@+id/btn_Search"
        style="@style/FirebaseUI.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="96dp"
        android:text="Search"
        app:layout_constraintBottom_toTopOf="@+id/listView1"
        app:layout_constraintEnd_toStartOf="@+id/test2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/test2"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="57dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/listView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_Search"
        app:layout_constraintTop_toBottomOf="@+id/btn_InputRes" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eText_Levels" />

</androidx.constraintlayout.widget.ConstraintLayout>
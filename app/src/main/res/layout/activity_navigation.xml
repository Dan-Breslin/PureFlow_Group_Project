<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navigation">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="194dp"
        android:layout_height="184dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pureflowgrouplogo" />

    <Button
        android:id="@+id/weather_btn"
        style="@style/FirebaseUI.Button"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:text="Weather"
        app:layout_constraintBottom_toTopOf="@+id/database_btn"
        app:layout_constraintEnd_toEndOf="@+id/database_btn"
        app:layout_constraintStart_toStartOf="@+id/database_btn"
        app:layout_constraintTop_toBottomOf="@+id/maps_btn"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/database_btn"
        style="@style/FirebaseUI.Button"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:text="Database"
        app:layout_constraintBottom_toTopOf="@+id/link_btn"
        app:layout_constraintEnd_toEndOf="@+id/link_btn"
        app:layout_constraintStart_toStartOf="@+id/link_btn"
        app:layout_constraintTop_toBottomOf="@+id/weather_btn"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/link_btn"
        style="@style/FirebaseUI.Button"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:layout_marginStart="145dp"
        android:layout_marginEnd="146dp"
        android:text="Links"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/database_btn"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/home_btn"
        style="@style/FirebaseUI.Button"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:text="Home"
        app:layout_constraintBottom_toTopOf="@+id/inputs_btn"
        app:layout_constraintEnd_toEndOf="@+id/inputs_btn"
        app:layout_constraintStart_toStartOf="@+id/inputs_btn"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/inputs_btn"
        style="@style/FirebaseUI.Button"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:text="Inputs"
        app:layout_constraintBottom_toTopOf="@+id/maps_btn"
        app:layout_constraintEnd_toEndOf="@+id/maps_btn"
        app:layout_constraintStart_toStartOf="@+id/maps_btn"
        app:layout_constraintTop_toBottomOf="@+id/home_btn"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/maps_btn"
        style="@style/FirebaseUI.Button"
        android:layout_width="120dp"
        android:layout_height="53dp"
        android:text="Map"
        app:layout_constraintBottom_toTopOf="@+id/weather_btn"
        app:layout_constraintEnd_toEndOf="@+id/weather_btn"
        app:layout_constraintStart_toStartOf="@+id/weather_btn"
        app:layout_constraintTop_toBottomOf="@+id/inputs_btn"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>